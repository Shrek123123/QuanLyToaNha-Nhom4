<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quanlytoanhanhom4.controller.AdminController">
   <top>
      <HBox spacing="10" style="-fx-background-color: #2874A6; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Quản lý Hành chính &amp; Nhân sự" />
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-text-fill: white;" text="Lọc theo trạng thái:" />
            <ComboBox fx:id="filterStatusCombo" onAction="#handleFilter" prefWidth="150" />
            <Button onAction="#handleBack" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Quay lại" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="10" style="-fx-padding: 15;">
         <children>
            <TableView fx:id="taskTable" prefHeight="300">
               <columns>
                  <TableColumn fx:id="colTaskType" prefWidth="120" text="Loại nhiệm vụ" />
                  <TableColumn fx:id="colTitle" prefWidth="200" text="Tiêu đề" />
                  <TableColumn fx:id="colDueDate" prefWidth="120" text="Ngày hết hạn" />
                  <TableColumn fx:id="colStatus" prefWidth="100" text="Trạng thái" />
                  <TableColumn fx:id="colPriority" prefWidth="80" text="Ưu tiên" />
               </columns>
            </TableView>
            <Label fx:id="statusLabel" style="-fx-text-fill: green;" />
         </children>
      </VBox>
   </center>
   <right>
      <VBox spacing="10" style="-fx-padding: 15; -fx-min-width: 300;">
         <children>
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Thông tin nhiệm vụ" />
            <Label text="Loại nhiệm vụ:" />
            <ComboBox fx:id="taskTypeCombo" prefWidth="250" />
            <Label text="Tiêu đề:" />
            <TextField fx:id="titleField" prefWidth="250" />
            <Label text="Mô tả:" />
            <TextArea fx:id="descriptionArea" prefHeight="80" prefWidth="250" />
            <Label text="Ngày hết hạn:" />
            <DatePicker fx:id="dueDatePicker" prefWidth="250" />
            <Label text="Trạng thái:" />
            <ComboBox fx:id="statusCombo" prefWidth="250" />
            <Label text="Ưu tiên:" />
            <ComboBox fx:id="priorityCombo" prefWidth="250" />
            <Label text="Ghi chú:" />
            <TextArea fx:id="notesArea" prefHeight="80" prefWidth="250" />
            <HBox spacing="10">
               <children>
                  <Button fx:id="addButton" onAction="#handleAdd" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 70;" text="Thêm" />
                  <Button fx:id="updateButton" disable="true" onAction="#handleUpdate" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 70;" text="Cập nhật" />
                  <Button fx:id="completeButton" disable="true" onAction="#handleComplete" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-pref-width: 80;" text="Hoàn thành" />
               </children>
            </HBox>
            <Button fx:id="deleteButton" disable="true" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 250;" text="Xóa" />
            <Button onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 250;" text="Làm mới" />
         </children>
      </VBox>
   </right>
</fx:root>
