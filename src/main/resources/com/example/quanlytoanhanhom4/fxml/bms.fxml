<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quanlytoanhanhom4.controller.BMSController">
   <top>
      <HBox spacing="10" style="-fx-background-color: #2874A6; -fx-padding: 15;">
         <children>
            <Label text="Giám sát &amp; Điều khiển BMS" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Lọc theo loại:" style="-fx-text-fill: white;"/>
            <ComboBox fx:id="filterTypeCombo" prefWidth="150" onAction="#handleFilter"/>
            <Button text="Quay lại" onAction="#handleBack" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="10" style="-fx-padding: 15;">
         <children>
            <TableView fx:id="systemTable" prefHeight="300">
               <columns>
                  <TableColumn fx:id="colSystemType" text="Loại hệ thống" prefWidth="120"/>
                  <TableColumn fx:id="colSystemName" text="Tên hệ thống" prefWidth="150"/>
                  <TableColumn fx:id="colLocation" text="Vị trí" prefWidth="150"/>
                  <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="100"/>
                  <TableColumn fx:id="colValue" text="Giá trị" prefWidth="100"/>
                  <TableColumn fx:id="colUnit" text="Đơn vị" prefWidth="80"/>
               </columns>
            </TableView>
            <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
         </children>
      </VBox>
   </center>
   <right>
      <VBox spacing="10" style="-fx-padding: 15; -fx-min-width: 300;">
         <children>
            <Label text="Thông tin hệ thống" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label text="Loại hệ thống:"/>
            <ComboBox fx:id="systemTypeCombo" prefWidth="250"/>
            <Label text="Tên hệ thống:"/>
            <TextField fx:id="systemNameField" prefWidth="250"/>
            <Label text="Vị trí:"/>
            <TextField fx:id="locationField" prefWidth="250"/>
            <Label text="Trạng thái:"/>
            <ComboBox fx:id="statusCombo" prefWidth="250"/>
            <Label text="Giá trị hiện tại:"/>
            <TextField fx:id="valueField" prefWidth="250"/>
            <Label text="Đơn vị:"/>
            <TextField fx:id="unitField" prefWidth="250"/>
            <Label text="Mô tả:"/>
            <TextArea fx:id="descriptionArea" prefWidth="250" prefHeight="100"/>
            <HBox spacing="10">
               <children>
                  <Button fx:id="addButton" text="Thêm" onAction="#handleAdd" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 80;"/>
                  <Button fx:id="updateButton" text="Cập nhật" onAction="#handleUpdate" disable="true" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 80;"/>
                  <Button fx:id="deleteButton" text="Xóa" onAction="#handleDelete" disable="true" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 80;"/>
               </children>
            </HBox>
            <Button text="Làm mới" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 250;"/>
         </children>
      </VBox>
   </right>
</BorderPane>

